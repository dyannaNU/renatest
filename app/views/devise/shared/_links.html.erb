<%- if controller_name != 'sessions' %>
<%= link_to t(".sign_in", :default => "Sign in"), new_session_path(resource_name, locale: I18n.locale), class: "btn btn-link" %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<%= link_to t(".sign_up", :default => "Sign up"), new_registration_path(resource_name, locale: I18n.locale), class: "btn btn-link" %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
<%= link_to t(".forgot_your_password", :default => "Forgot your password?"), new_password_path(resource_name, locale: I18n.locale), class: "btn btn-link" %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
<%= link_to t('.didn_t_receive_confirmation_instructions', :default => "Didn't receive confirmation instructions?"), new_confirmation_path(resource_name), class: "btn btn-link" %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
<%= link_to t('.didn_t_receive_unlock_instructions', :default => "Didn't receive unlock instructions?"), new_unlock_path(resource_name, locale: I18n.locale), class: "btn btn-link", style: "white-space: normal; text-align: inherit;" %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to send("#{resource_name}_#{provider}_omniauth_authorize_path", locale: I18n.locale),
                class: "btn btn-secondary btn-block" do %>
        <%= image_tag "#{provider.to_s}-logo.png" %>
        <%= t('.sign_in_with_provider', provider: provider.to_s.titleize.split(/ /).first, :default => "Sign in with #{provider.to_s.titleize}") %>
    <% end -%>
    <br />
  <% end -%>
<% end -%>
